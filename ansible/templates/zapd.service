[Unit]
Description=zapd
After=network.target

[Service]
User=zapd
Group=zapd

Type=simple
Environment="SERVER_NAME={{SERVER_NAME}}"
ExecStart=/usr/bin/python3 /opt/zapd/app.py

Restart=always
PrivateTmp=true
TimeoutStopSec=60s
TimeoutStartSec=2s
StartLimitInterval=120s
StartLimitBurst=5

[Install]
WantedBy=multi-user.target
